<!-- Promotion loop -->
<h4 class="my-4">Hot Deals</h4>
<div class="row">
    <% promotions.forEach(function(item) { %>
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <%- item.img_holder %>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="#"><%= item.brand %></a>
                </h4>
                <h5><%= item.type %></h5>
                <p class="card-text"><%= item.description %></p>
            </div>
            <div class="card-footer">
                <%- item.btn_holder %>
                <p class="text-muted">Item: <%= item.sku %></p>
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
            </div>
        </div>
    </div>
    <% });%>
</div>
