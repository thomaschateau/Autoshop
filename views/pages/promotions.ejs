<!DOCTYPE html>
<html lang="en">
    <head>
      <!-- Call head.ejs -->
        <% include ../partials/head %>
    </head>
    <header>
      <!-- Call header.ejs -->
        <% include ../partials/header %>
    </header>
    <body style="background-color: #e9ebee;">
        <!-- Page Content -->
        <% include ../partials/categories %>
        <!-- Loop for every item in the variable -->
        <div class="col-lg-9">
            <br>
            <br>
            <div class="row">
                <% promotions.forEach(function(item) { %>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <%- item.img_holder %>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="#"><%= item.brand %></a>
                            </h4>
                            <h5><%= item.type %></h5>
                            <p class="card-text"><%= item.description %></p>
                        </div>
                        <div class="card-footer">
                            <button type="button" class="btn btn-primary">Add to basket</button>
                            <p class="text-muted">Item: <%= item.sku %></p>
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>
                <% });%>
            </div>
        </div>
        </div>
        <div class="jumbotron jumbotron-fluid" style="background-color: #5eefac;">
            <div class="container">
                <h1 class="display-4" style="color: #ffffff;">More coming!</h1>
                <p class="lead" style="color: #ffffff;">Limited offer but great prices. More stuff to come!</p>
            </div>
        </div>
        </div>
    </body>
    <% include ../partials/footer %>
</html>
