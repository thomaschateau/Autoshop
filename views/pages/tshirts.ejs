<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head %>
  </head>
  <header>
   <% include ../partials/header %>
  </header>
  <body style="background-color: #e9ebee;">

<div class="container">
    <div class="jumbotron jumbotron-fluid" style="background-color: #ff5152;">
    <div class="container">
      <h1 class="display-4" style="color: #ffef74;">Hey!</h1>
      <p class="lead" style="color: #ffef74;">Check out our great t-shirt database!</p>
    </div>
    </div>
        </div>
       <% include ../partials/categories %>

       <div class="col-lg-9">
          <div class="row">
        <% tshirts.forEach(function(item) { %>
          <div class="col-lg-4 col-md-6 mb-4">
             <div class="card h-100">
                <a href="#"><img class="card-img-top" src="pictures/t5.jpg" alt=""></a>
                <div class="card-body">
                   <h4 class="card-title">
                      <a href="#"><%= item.brand %></a>
                   </h4>
                   <h5><%= item.type %></h5>
                   <p class="card-text"><%= item.description %></p>
                </div>
                <div class="card-footer">
                   <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                </div>
             </div>
          </div>
          <% });%>
        </div>
     </div>

  </body>
    <!-- Footer -->
    <footer>
 <% include ../partials/footer %>
    </footer>
</html>
